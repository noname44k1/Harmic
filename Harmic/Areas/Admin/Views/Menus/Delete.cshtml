    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Xoá menu</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Tiêu đề:</label>
                                    @Html.DisplayFor(model => model.Title)
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Alias:</label>
                                    @Html.DisplayFor(model => model.Alias)
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Cấp:</label>
                                    @Html.DisplayFor(model => model.Levels)
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Hiện</label>
                                    @Html.DisplayFor(model => model.IsActive)
                                </div>
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="MenuId" />
                                    <input type="submit" value="Xoá" class="btn btn-danger" /> |
                                    <a asp-action="Index" class="btn btn-primary">Quay lại</a>
                                </form>
                            </div>
                        
                    </div>
